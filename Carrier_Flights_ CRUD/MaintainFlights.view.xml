<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="zt_rff_second_fiori.MaintainFlights"
	xmlns:f="sap.ui.layout.form"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Maintain Flight" showNavButton="true" navButtonPress="handleNavButtonPress" titleLevel="H2">
		<content>
			<f:SimpleForm id="idFlightForm" minWidth="800"
				maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
				labelSpanL="3" labelSpanM="3" emptySpanL="4"
				emptySpanM="4" columnsL="1" columnsM="1" class="editableForm">
				<Label text="Carrie" />
				<Input id="Carrid" value="{Carrid}" editable="false" />
				<Label text="Flight" />
				<Input id="Connid" value="{Connid}" editable="false" />
				<Label text="Date" />
				<Input id="Fldate" value="{ path: 'Fldate', formatter: '.formatDate' }" />
				<Label text="Price" />
				<Input id="Price" value="{Price}" />
				<Label text="Currency" />
				<Input id="Currency" value="{Currency}" />
				<Label text="Plane" />
				<Input id="Planetype" value="{Planetype}" />
				<Button text="Save" type="Emphasized" icon="sap-icon://save" press="Save" /> 	
			</f:SimpleForm>
		</content>
	</Page>
</core:View>